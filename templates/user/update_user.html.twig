{% extends 'base.html.twig' %}
//affiche le tableau dans le site internet
{% block body %}

	<h1 class="text-center mx-auto my-4">Modifier mes informations</h1>

	<div class="row">
		<div="col-10mx-auto">
			{{form_start(form)}}
			<div class="row">
				<div class="col-6">
					{{form_row(form.prenom)}}
				</div>

				<div class="col-6">
					{{form_row(form.nom)}}

				</div>

			</div>
			{{form_row(form.email)}}
			{{form_row(form.password)}}


			{{form_end(form)}}


		</div>
	</div>

{% endblock %}
