{% for label, messages in app.flashes %}

	{% for message in messages %}
		<div class="alert alert --{{label}} alert-dismisible fade show" role="alert">
			{% if label == 'success' %}
				<span class="alert--inner--icon">
					<i class="fa fa-thumb-up"></i>
				</span>
			{% else %}
				<span class="alert--inner--icon">
					<i class="fa fa-thumb-up"></i>
				</span>

			{% endif %}
			<span class="alert-inner--text">
				<strong>{{ label | tittle}}
					:
				</strong>
				{{ message | raw }}
			</span>
		</div>

	{% endfor %}
{% endfor %}
