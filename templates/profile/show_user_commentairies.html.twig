{% extends 'base.html.twig' %}

{% block body %}

	<div class="row mt-3">
		{% include 'include/_flashes.html.twig' %}
	</div>

	<div class="row">


		<div class="col-12 bg-info p-4 rounded">
			<span>Total des commentaires créés :
				{{ total }}</span>
			<span class="ps-3">Total commentaires en ligne :
				{{ totalInline }}</span>
			<span class="ps-3">Total commentaires archivés :
				{{ totalArchived }}</span>
		</div>

	</div>

	<div class="row">
		<div class="col-6 mt-4">

			<h3 class="h4">Commentaires en ligne</h3>


			<table class="table">
				<thead>
					<tr>
						<th>Contenu</th>
						<th>Posté sur</th>
						<th>Crée le</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>
					{% set countIn = 0 %}
					{% set countOut = 0 %}

					{% if commentaries is not empty %}
						{% for commentary in commentaries %}
							{% if commentary.deletedAt is null %}
								{%  set countIn = countIn + 1 %}

								<tr>
									<td>{{ commentary.comment | slice(0,15) }}</td>
									<td>{{ commentary.article.title | slice(0, 10) }}</td>
									<td>{{ commentary.createdAt | date('d/m/Y') }}</td>
									<td>
										<a href="{{ path('soft_delete_commentary', {'id': commentary.id}) }}" class="btn btn-info" title="Archiver mon commentaire">
											<i class="fa fa-trash"></i>
										</a>
									</td>
								</tr>

							{% endif %}
						{% endfor %}
					{% endif %}

				</tbody>
			</table>

			<p>Total :
				{{ countIn }}</p>
		</div>
		{# END .col-6 #}

		<div class="col-6 mt-4">

			<h3 class="h4">Commentaires archivés</h3>

			<table class="table">
				<thead>
					<tr>
						<th>Contenu</th>
						<th>Posté sur</th>
						<th>Crée le</th>
						<th>Action</th>
					</tr>
				</thead>
				<tbody>

					{% if commentaries is not empty %}
						{% for commentary in commentaries %}
							{% if commentary.deletedAt is not null %}
								{%  set countOut = countOut + 1 %}

								<tr>
									<td>{{ commentary.comment | slice(0,15) }}</td>
									<td>{{ commentary.article.title | slice(0, 10) }}</td>
									<td>{{ commentary.createdAt | date('d/m/Y') }}</td>
									<td>
										<a href="{{ path('restore_commentary', {'id': commentary.id}) }}" class="btn btn-info" title="Restaurer mon commentaire">
											<i class="fa fa-trash-restore"></i>
										</a>
									</td>
								</tr>

							{% endif %}
						{% endfor %}
					{% endif %}

				</tbody>
			</table>
			<p>Total :
				{{ countOut }}</p>
		</div>

	</div>
	{# END .row #}


{% endblock %}
