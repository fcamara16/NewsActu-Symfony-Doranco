{% extends 'base.html.twig'%}

{% block body %}

	<div class="row ">
		<div class"text-center"="col-12 mx-auto">

			<h1>Ajouter un article</h1>
		</div>
	</div>


	<div class="row">
		<div class="col-8 mx-auto">

			{# 1ère façon: affichage global du formulaire #}
			{# {{form(form)}} #}

			{# 2ème façon: affichage détaillé du form, input par input #}

			{{form_start(form, {'attr': {novalidate: 'novalidate'}}
			) }}

				<div class="mb-3"> {{form_row(form.title)}}
			</div>

			<div class="mb-3">
				{{form_row(form.subtitle)}}
			</div>

			<div class="mb-3">
				{{form_row(form.content)}}
			</div>

			<div class="mb-3">
				{{form_row(form.category)}}
			</div>

			<div class="mb-3">
				{{form_row(form.photo)}}
			</div>

			<button type="submit" class="d-block col-2 mx-auto btn btn-warning mb-3
								           ">Publier</button>

			{{from_end(form) }}

		</div>

	</div>


{% endblock %}
