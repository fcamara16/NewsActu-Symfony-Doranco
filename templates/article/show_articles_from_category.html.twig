{% extends 'base.html.twig' %}
{% block body %}

	<h1 class="text-center mt-3">{{ category.name|capitalize}}</h1>

	{% for article in articles %}

		<div class="row">
			<hr>
			<div class="col-8 mx-auto">


			{% endfor %}
			<div class="card mb-3" style="max-width: 100%; height:">
				<div class="row g-0">
					<div class="col-md-4">
						<img src="{{ asset ('uploads/') ~ article.photo }}" class="img-fluid rounded-start img-card-custom" alt="{{ article.title }}">
					</div>
					<div class="col-md-8">
						<div class="card-body">
							<h5 class="card-title">{{ article.title|length > 80 ? article.title|slice(0,50) ~ '...' : article.title }}</h5>
							<p class="card-text">{{ article.subtitle|length > 170 ? article.subtitle|slice(0,170) ~ '...' article.subtitle}}</p>
							<p class="card-text">
								<small class="text-muted">Derni√®re modification :
									{{ article.updatedAt|date('d/m/Y')}}<span class="text-muted">
										|Auteur</span>
								</small>
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
